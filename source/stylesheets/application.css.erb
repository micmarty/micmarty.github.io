<% light_blue = data.settings.colors.header.button_background %>

a.btn-cta-primary, 
.btn-cta-primary
{
    border: none;
    background: <%= light_blue %>;
}

a.btn-cta-primary:hover, 
.btn-cta-primary:hover
{
    border: none;
    background: <%= light_blue %>;
}

a.btn-cta-secondary, .btn-cta-secondary{
    border: none;
    background: <%= light_blue %>;
}

a.btn-cta-secondary:hover, .btn-cta-secondary:hover{
    border: none;
    background: <%= light_blue %>;
}

p, p.summary{
    /* 
    Force using newlines as they are in YML data files
    Without this, text is wrapping to container, not preserving line breaks 
    */
    white-space: pre-wrap; 
}

a.my-buttons {
    margin-top: 4px;
    margin-bottom: 4px;
    margin-left: 4px;
    margin-right: 4px;
}

#codewars-badge {
    /* 
    Use the same value as in .header .btn inside styles.css
    It makes those two elements at the same height
    */
    margin-top: 10px; 
}

.hideContent {
    overflow: hidden;
    line-height: 1em;
    height: 0em;
}

.showContent {
    <%# line-height: 1em; %>
    height: auto;
}
.showContent {
    height: auto;
}

.header {
    border-top: 0px; <%# inherited was: 10px solid #778492; %>
